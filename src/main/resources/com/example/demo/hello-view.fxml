<VBox alignment="CENTER" prefHeight="401.0" prefWidth="478.0" spacing="20.0" style="-fx-background-color: cyan; -fx-border-color: red;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
   <children>
      <Label fx:id="headertext" alignment="TOP_CENTER" style="-fx-font-size: 23px;" text="Welcome to Student's Bank" textFill="#df0c13" wrapText="true">
         <effect>
            <Glow />
         </effect>
      </Label>
      <Label fx:id="loginfailed" prefHeight="19.0" prefWidth="266.0" textFill="#181817">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="180.0" prefWidth="345.0">
         <children>
            <TextField fx:id="username" layoutX="212.0" layoutY="32.0" />
            <Label layoutX="101.0" layoutY="34.0" text="Username :">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label layoutX="101.0" layoutY="92.0" text="Password :">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="login" layoutX="138.0" layoutY="166.0" mnemonicParsing="false" onAction="#login" style="-fx-background-color: skyblue; -fx-cursor: ;" text="Login">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button fx:id="register" layoutX="213.0" layoutY="166.0" mnemonicParsing="false" onAction="#register" style="-fx-background-color: lightgreen; -fx-cursor: ;" text="Register here" />
            <PasswordField fx:id="password" layoutX="213.0" layoutY="90.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
